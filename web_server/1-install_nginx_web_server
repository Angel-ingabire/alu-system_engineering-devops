#!/bin/bash

# Update package lists
apt update -y

# Install Nginx
apt install nginx -y

# Ensure Nginx is started (without using systemctl)
service nginx start

# Create a simple webpage that contains "Holberton School"
echo "Holberton School for the win!" | tee /var/www/html/index.html

# Allow HTTP traffic through the firewall
ufw allow 80/tcp

# Reload Nginx to apply changes
nginx -s reload

echo "Nginx installed and configured successfully!"

