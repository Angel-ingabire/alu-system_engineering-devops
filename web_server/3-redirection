#!/usr/bin/env bash
# Bash script that configures Nginx to redirect '/redirect_me' to 'https://github.com/Angel-ingabire/'
# Redirection is configured as a "301 Moved Permanently"

# Update package list and install Nginx
apt-get update -y
apt-get install -y nginx

# Ensure the document root exists and create an index file
mkdir -p /var/www/html
echo "Holberton School" > /var/www/html/index.html

# Configure Nginx redirection
cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm;

    location /redirect_me {
        return 301 https://github.com/Angel-ingabire/;
    }

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Test configuration and restart Nginx
nginx -t && service nginx restart

